    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Aclonica">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Acme">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bitter:400,700">
    <link rel="stylesheet" href="../public/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="../public/assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="../public/assets/css/Article-List.css">
    <link rel="stylesheet" href="../public/assets/css/Footer-Dark.css">
    <link rel="stylesheet" href="../public/assets/css/Header-Dark-1.css">
    <link rel="stylesheet" href="../public/assets/css/Header-Dark.css">
