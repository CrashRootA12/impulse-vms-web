</head>

<body>
    <h2>Live Results of Poll: &lt;%= poll_title %&gt; ID: &lt;%= poll_id %&gt;</h2>
    <header></header>
    <div class="dropdown show"><button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
            aria-expanded="true" type="button">Choose Chart Type</button>
        <div class="dropdown-menu show" role="menu"><a class="dropdown-item" role="presentation" href="#">Bar
                Chart</a><a class="dropdown-item" role="presentation" href="#">Pie Chart</a>
            <!-- <div class="dropdown-divider" role="presentation"></div> -->
        </div>
    </div>
    <div>
        <canvas id="theChart"></canvas>
    </div>
    <script src="../public/assets/js/jquery.min.js"></script>
    <script src="../public/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="../public/assets/js/chart.min.js"></script>
    <script src="../public/assets/js/bs-init.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="../public/assets/js/agency.js"></script>
    <script>
       
        var ctx = document.getElementById("theChart").getContext('2d')
        var myNewChart = new Chart(ctx, {
            type: 'bar',
                data: {
                    labels: [
                        "<%= chartLabel %>"
                    ],
                    datasets: [{
                        label: 'Population',
                        data: [
                            <%= chartData %>
                        ],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.6)'
                        ]
                    }]
                }
            }
        )
    </script>
</body>

